<h2> 
  Hello, <%= @user_name %>! <br> 
  Welcome to our chat! 
</h2>

<ul>
  <% @messages.each do |message| %>
      <% message_data = JSON.parse(message) %>
      <li><%= message_data['user'] %> : <%= message_data['text'] %></li>
  <% end %>
</ul>

<%= form_for :message, url: messages_path do |f| %>
    <p>
      <%= f.label :new_message %><br> 
      <%= f.text_area :text %> 
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>